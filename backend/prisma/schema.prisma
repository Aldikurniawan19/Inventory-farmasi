// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ... generator dan datasource di atas biarkan saja ...

// 1. Model User (HANYA BOLEH ADA SATU BLOK INI)
model User {
  id             Int             @id @default(autoincrement())
  username       String          @unique
  password       String
  name           String
  role           String          // GUDANG, APOTEK, PURCHASING
  createdAt      DateTime        @default(now())

  // Relasi yang sudah ada sebelumnya
  orders         Order[]
  purchaseOrders PurchaseOrder[]

  // --- TAMBAHAN BARU (Pastikan baris ini ada) ---
  logs           ActivityLog[]   
}

// ... model Product, Order, dll biarkan saja ...

// Model Activity Log (Pastikan ini ada di paling bawah)
model ActivityLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  action    String   
  details   String   
  createdAt DateTime @default(now())
}

// 2. Tabel Produk (Obat)
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  type        String   
  unit        String   
  price       Float
  stock       Int      @default(0)
  minStock    Int      @default(10)
  location    String?  
  createdAt   DateTime @default(now())
  
  items       OrderItem[]         // Relasi ke Item Penjualan (sudah ada)
  
  // TAMBAHKAN BARIS INI:
  poItems     PurchaseOrderItem[] // Relasi ke Item Pembelian
}

// 3. Tabel Pesanan (Dari Apotek)
model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  status      String   @default("PROCESSING") // PROCESSING, SHIPPED, COMPLETED
  totalAmount Float
  createdAt   DateTime @default(now())
  items       OrderItem[]
}

// 4. Detail Item dalam Pesanan
model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  qty       Int
  price     Float   // Harga saat dibeli
}


// 5. Tabel Supplier / Pabrik
model Supplier {
  id      Int      @id @default(autoincrement())
  name    String
  address String?
  phone   String?
  pos     PurchaseOrder[]
}

// 6. Tabel Purchase Order (PO)
model PurchaseOrder {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  supplier    Supplier  @relation(fields: [supplierId], references: [id])
  userId      Int       // Staff Purchasing yang membuat
  user        User      @relation(fields: [userId], references: [id])
  status      String    @default("PENDING") // PENDING, SENT, RECEIVED, CANCELLED
  totalAmount Float
  createdAt   DateTime  @default(now())
  items       PurchaseOrderItem[]
}

// 7. Detail PO (Detail_PO di ERD)
model PurchaseOrderItem {
  id        Int           @id @default(autoincrement())
  poId      Int
  po        PurchaseOrder @relation(fields: [poId], references: [id])
  productId Int
  product   Product       @relation(fields: [productId], references: [id])
  qty       Int
  costPrice Float         // Harga Beli dari Supplier
}